<?xml version="1.0" encoding="utf-8" ?>
<log4net>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
        <layout type="log4net.Layout.PatternLayout">
            <!-- Pattern to output the caller's file name and line number -->
            <conversionPattern value="%5level [%thread] (%file:%line) - %message%newline" />
        </layout>
    </appender>
    <appender name="RootAppender" type="log4net.Appender.RollingFileAppender">
        <file value="" />
        <appendToFile value="true" />
        <maximumFileSize value="1MB" />
		<param name="StaticLogFileName" value = "false" />
		<param name="DatePattern" value="yyyyMMdd-HHmmss&quot;.log&quot;"/>
        <param name="RollingStyle" value="Date"/>
        <maxSizeRollBackups value="20" />
		<encoding value = "utf-8" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss.fff} [%level] (%logger) %message%newline%exception" />
        </layout>
    </appender>
		
	<logger name="root">
        <level value="Debug" />
        <appender-ref ref="RootAppender" />
    </logger>

	<logger name="PlatformLogger">
<!--        <level value="Info" /> -->
    </logger>
</log4net>